<UserControl x:Class="GamblingHero.Page.WorldMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GamblingHero.Page"
             mc:Ignorable="d" 
             d:MinHeight="440" d:MinWidth="500">
    <UserControl.Resources>
        <ImageBrush ImageSource="{StaticResource Grass01}" x:Key="M1_1" x:Name="M1_1"/>
        <ImageBrush ImageSource="{StaticResource Grass02}" x:Key="M1_2" x:Name="M1_2"/>
        <ImageBrush ImageSource="{StaticResource Water01}" x:Key="M2_1" x:Name="M2_1"/>
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" 
                  CanContentScroll="True" Width="auto" Height="auto">
        <Grid Background="White">
            <WrapPanel Name="MapBackground" Width="500" Height="440">

            </WrapPanel>
            <Canvas x:Name="MapObjects" Width="500" Height="440">

            </Canvas>
        </Grid>
    </ScrollViewer>
</UserControl>
